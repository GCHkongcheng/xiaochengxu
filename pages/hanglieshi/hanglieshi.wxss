/* 整体容器 */
.container {
  padding: 20px;
  background-color: #f8f8f8;
  min-height: 100vh;
}

/* 选择行列式阶数的样式 */
picker {
  margin-bottom: 20px;
  display: block;
}

picker text {
  font-size: 18px;
  color: #333;
  font-weight: bold;
}

/* 矩阵容器 */
.matrix-container {
  margin-bottom: 20px;
}

/* 每一行的样式 */
.matrix-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10px;
}

/* 每一个输入框的样式 */
.matrix-input {
  width: 40px;
  height: 40px;
  text-align: center;
  border: 1px solid #ccc;
  border-radius: 4px;
  font-size: 16px;
  padding: 0;
  margin: 0 5px;
}

/* 计算按钮的样式 */
button {
  display: block;
  width: 100%;
  padding: 12px;
  background-color: #4caf50;
  color: white;
  border: none;
  border-radius: 4px;
  font-size: 18px;
  cursor: pointer;
  text-align: center;
}

button:hover {
  background-color: #45a049;
}

/* 结果显示的样式 */
.result {
  font-size: 18px;
  color: #333;
  margin-top: 20px;
  font-weight: bold;
}

.text-error {
  color: red;
  font-weight: normal;
  font-size: 16px;
}
