.xuanxiang {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-top: 50px;
}

.button {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  width: 100%;
}

.buttonrow {
  flex: 0 0 calc(33.333% - 1%); /* 每个按钮占据三分之一的宽度减去间隙 */
  margin: 0.5%; /* 按钮间距 */
  background-color: #f8f8f8; /* 按钮背景色 */
  border: 2px solid #0001021e; /* 设置边框 */
  padding: 10px 0; /* 按钮内边距 */
  text-align: center; /* 文字居中 */
  box-sizing: border-box; /* 边框和内边距包含在宽度内 */
  height: 100px; /* 设置固定高度以确保方形 */
  display: flex;
  align-items: center;
  justify-content: center; 
}


swiper {
  width: 100%;
  height: 300rpx; 
}
.kuang {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 300rpx; /* 根据需要调整高度 */
