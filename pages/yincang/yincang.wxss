/* 容器设置 */
.container {
  display: flex;
  flex-direction: column;
  justify-content: flex-start; 
  margin-top: 50px ;
  align-items: center;      /* 水平居中 */
  height: 100vh;            /* 占满整个视口 */
  padding: 20rpx;
  box-sizing: border-box;   /* 确保内边距不影响元素的实际大小 */
}

/* 输入框容器 */
.input-container {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;  /* 确保子元素从顶部开始排列 */
  align-items: center;
  width: 80%;                   /* 设置容器宽度，避免元素过宽 */
  padding: 20rpx;
  box-sizing: border-box;      /* 确保 padding 不影响元素的实际大小 */
  margin-bottom: 20rpx;         /* 防止按钮被遮挡 */
}

/* 输入框样式 */
input {
  width: 100%;
  height: 40rpx;
  margin-bottom: 20rpx;  /* 为按钮和输入框留空间 */
  padding: 10rpx;
  border: 1px solid #ccc;
  border-radius: 4px;
}

/* 按钮样式 */
button {
  width: 70%;  
  height: 35px;
  border: none;
  border-radius: 4px;
  margin-top: 15rpx; /* 为按钮和输入框之间留出空间 */
  box-sizing: border-box; /* 确保按钮内容不会超出 */
  line-height: 30rpx; /* 设置行高，确保文本垂直居中 */
  text-align: center; /* 确保文本水平居中 */
  font-size: 25rpx;  /* 设置较小的字体大小 */
}
