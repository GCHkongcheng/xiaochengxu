.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
}

.input-group {
  width: 100%;
  align-items: center;
  margin-bottom: 20px;
}

.label {
  width: 100%;
}

.input-field {
  padding: 10px;
  border: 1px solid #ddd;
}

.selector {
  padding: 10px; 
  border: 1px solid #ddd;
  border-radius: 4px;
}

.convert-button {
  width: 100%;
  margin-top: 10px;
}

.result {
  width: 100%; 
 padding: 10px;
  margin-top: 20px;
  background-color: #f0f0f0;
  text-align: center;
}
