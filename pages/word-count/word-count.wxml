<view class="container">
  <textarea class="text-area" placeholder="请输入文本..." bindinput="onInput"></textarea>
  <button bindtap="countWords">统计总字数</button>
  <view>总字数：{{totalWords}}</view>
  <button bindtap="countWordsWithoutPunctuation">统计去掉标点空格字数</button>
  <view>去掉标点空格后的字数：{{wordsWithoutPunctuation}}</view>
</view>
